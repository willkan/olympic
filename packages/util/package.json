{
  "name": "olympic-util",
  "version": "0.1.13",
  "dependencies": {
    "chalk": "^2.3.0",
    "fs-extra": "^5.0.0",
    "joi": "^13.1.0",
    "js-yaml": "^3.10.0",
    "lodash": "^4.17.4",
    "mysql": "^2.15.0",
    "onlylog": "1.0.0-beta13"
  },
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch",
    "report": "jest && open coverage/index.html",
    "build": "./node_modules/.bin/tsc",
    "prepare": "npm run build"
  },
  "main": "./lib/index",
  "devDependencies": {
    "@types/express": "^4.11.0",
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^22.0.1",
    "@types/joi": "^13.0.4",
    "@types/js-yaml": "^3.10.1",
    "@types/lodash": "^4.14.92",
    "@types/mysql": "^2.15.2",
    "@types/node": "^8.5.2",
    "express": "^4.16.2",
    "express-serve-static-core": "^0.1.1",
    "jest": "^22.0.4",
    "sinon": "^4.1.5",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "forceExit": true,
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "webpage/.+\\.(js|jsx|ts|tsx)$"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "webpage"
    ],
    "modulePathIgnorePatterns": [
      "test-resource-generated"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  }
}
